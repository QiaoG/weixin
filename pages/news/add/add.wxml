<!--pages/news/add/add.wxml-->
<view class='page'>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input class="weui-input" bindconfirm='confirmTitle' bindblur='confirmTitle' placeholder="请输入新闻标题" style='font-size:16px'/>
      </view>
    </view>
  </view>
    <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__bd">
        <input class="weui-input" bindconfirm='confirmSource' bindblur='confirmSource' placeholder="请输入新闻来源" style='font-size:15px'/>
      </view>
    </view>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input" >
      <view class="weui-cell__bd">
        <textarea class="weui-textarea" placeholder="请输入新闻内容" bindconfirm='confirmContent' bindblur='confirmContent' style="height: 22.8em;font-size: 13px;top:5px" />
      </view>
    </view>
  </view>
  <view class="section-input">
    <button class='weui-btn' type='primary' style='flex:1;background:#e14834;' bindtap='add' disabled='{{adding}}'>提交</button>
  </view>
</view>
