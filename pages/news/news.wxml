<view class='page'>
  <view class="weui-panel__bd" wx:for="{{newses}}" wx:key="id" style=' background:#F4F4F4;padding:5px;'>
    <view class="weui-media-box weui-media-box_text" data-id='{{item.id}}' bindtap='detail' style=' background:#FFFFFF;padding:5px'>
      <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
      <view class="weui-media-box__desc">{{item.content}}</view>
      <view class="weui-media-box__info">
      <view class="weui-media-box__info__meta">{{item.authorNickName}}</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">评论:{{item.discussCount}}</view>
        <view class="weui-media-box__info__meta">{{item.createDate}}</view>
      </view>
    </view>
  </view>
  <view style='height:3.2em;'></view>
  <view class="section-input" style='height:4em;'>
    <button class='weui-btn' style='flex:1;background:#e14834;' bindtap='add' type='primary'>添加热点</button>
  </view>
</view>