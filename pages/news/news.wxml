<view class='page'>
  <view class="weui-panel__bd" wx:for="{{newses}}" wx:key="id" >
    <view class="weui-media-box weui-media-box_text" data-id='{{item.id}}' bindtap='detail'>
      <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
      <view class="weui-media-box__desc">{{item.content}}</view>
      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta">评论:{{item.discussCount}}</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{item.createDate}}</view>
      </view>
    </view>
  </view>
</view>