<!--pages/news/detail/detail.wxml-->
<view class='page'>
  <view class="page__hd">
    <view class="weui-article__h2">{{demand.title}}</view>
    <text class="weui-article__p">{{demand.content}}</text>
  </view>
  <view class="weui-panel__bd" wx:for="{{discusses}}" wx:key="id">
    <view class="weui-media-box weui-media-box_text">
      <view class="weui-media-box__desc">{{item.content}}</view>
      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta">{{item.authorNickName}}</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{item.createDate}}</view>
      </view>
    </view>
  </view>
  <view class="section-input">
    <input class="weui-input" placeholder='评论' style='flex:1;margin-right:0.5em;'/>
    <button bindtap="addDiscuss" size='mini'>发送</button>
  </view>
</view>