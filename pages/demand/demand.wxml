<view class='page'>
  <view class="weui-panel__bd" wx:for="{{demands}}" wx:key="id" style=' background:#F4F4F4;padding:5px'>
    <view class="weui-media-box weui-media-box_text" data-id='{{item.id}}' bindtap='detail' style=' background:#FFFFFF;padding:5px'>
      <view class="weui-media-box__title weui-media-box__title_in-text">{{item.title}}</view>
      <view class="weui-media-box__desc">{{item.content}}</view>
      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta">评论:{{item.discussCount}}</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{item.publishDate}}</view>
      </view>
    </view>
  </view>
  <view class="section-input">
    <button class='weui-btn' size='mini' type='primary' plain='true' bindtap='add'>添加需求</button>
  </view>
</view>