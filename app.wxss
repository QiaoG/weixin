/**app.wxss**/
@import "style/weui.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.page__hd {
    padding: 10px;
}
.page__bd {
    padding-bottom: 20px;
}
.section-input{
  font-size: 15px;
  height:3em;
  background:#F4F4F4; 
  padding: 0.5em;
  display: flex;
  position: fixed;
  bottom: 0px;
  width: 100%;
  box-sizing: border-box;
  flex-direction: row; 
}

.row-option{
  font-size: 13px;
  height:2em; 
  padding: 0.5em;
  display: flex;
  justify-content:center;
  width: 100%;
  box-sizing: border-box;
  flex-direction: row; 
}
